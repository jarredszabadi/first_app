<% if current_user == @user %>
<h1><%= @user.email %></h1>

<%= form_for (current_user.notes.build()) do |f| %>

<div class="field">
	<%= f.label :text %><br />
	<%= f.text_area :text %>
</div>

<div class="actions">
	<%= f.submit "Post" %>
</div>
<% end %>


<div class = "all_notes">
	<% @notes = @user.notes %>
	
	<hr></hr>
	<% @notes.reverse.each do |note| %>
	
	<p><%= note.text %></p>
	<p> <%= note.created_at %></p>
</div>
<% end %>

<% else %>

<h1> you must own this account to view it's notes </h1>

<% end %>